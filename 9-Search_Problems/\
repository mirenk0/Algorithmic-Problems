def count(n, k, x):
    """
    Calculates the number of ways to choose k numbers from 1 to n such that their sum equals x.

    Args:
        n (int): The upper limit of the list (1 to n).
        k (int): The number of elements to choose.
        x (int): The target sum.

    Returns:
        int: The number of valid combinations.
    """

    if k == 0:
        return 1  # Base case: No elements to choose (only 1 way)
    if x == 0 and k > 0:
        return 0  # Base case: Target sum 0 with k elements (no valid combinations)

    ways = 0
    for i in range(1, n + 1):
        # Explore possibilities where the current number `i` is included
        ways += count(n - i, k - 1, x - i)

    return ways


if __name__ == "__main__":
    print(count(1, 1, 1)) # 1
    print(count(5, 2, 6)) # 2
    print(count(8, 3, 12)) # 6
    print(count(10, 4, 20)) # 16
